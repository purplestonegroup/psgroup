<section class="eight columns">

    <div class="postslist">
      <% @posts.each do |post| %>
        <div class="single_post group">

            <div class="post_details">
	            <h2><%= link_to post.title, post_path(post) %></h2>
	            <%# image_tag job.company_logo.url, class: "company_logo" %>
	            <p><%= post.body %></p>
            </div>

        </div>
      <% end %>

    </div>
</section>

<section class="four columns">

<%= render "postsmenu" %>

</section>