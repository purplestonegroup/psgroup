<section class="video_form">

  <div class="eight columns video">
    <%= image_tag "video.gif" %>
  </div>

  <div class="four columns aweberform">
    <h2>Grab Your FREE Report</h2>
    <h3>Maximise Your Return On Investment!</h3>
    <script type="text/javascript" src="http://forms.aweber.com/form/87/353488187.js"></script>
  </div>

</section>

<section class="eight columns">

    <div class="postslist">
      <% @posts.limit(1).each do |post| %>
        <div class="single_post group">

            <div class="post_details">
	            <h2><%= post.title %></h2>
	            <%= image_tag post.image.url(:header), class: "post_image" %>
	            <p><%= truncate post.body, length: 100 %></p>
              <p class="button"><%= link_to "READ MORE", post_path(post) %></p>
            </div>

        </div>
      <% end %>
    </div>

</section>

<section class="four columns">
<%= render "postsmenu" %>
</section>