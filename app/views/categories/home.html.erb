<section class="video_form">

  <div id="slider" class="eight columns flexslider">
    <ul class="slides">
      <li>
        <h2>Want to Get High Return On Your PROPERTY Investment?</h2>
        <div class="transp"></div>
        <%= image_tag "slide_property_psg.jpg" %>
      </li>
      <li>
        <h2>Purple Stone Group is Looking For Investors to PARTNER With Us</h2>
        <%= image_tag "slide_partner_psg.jpg" %>
        <div class="transp"></div>
      </li>
      <li>
        <h2>Are You Landlord, Interested in RENTING Out Your Property?</h2>
        <%= image_tag "slide_renting_psg.jpg" %>
        <div class="transp"></div>
      </li>
    </ul>
  </div>

  <%= render :partial => 'shared/aweberform' %>

</section>

<section class="eight columns">

    <div class="postslist">
        <div class="single_post group">

      <% @posts.each do |post| %>
        <div class="single_post group">

            <div class="post_details">
              <h2><%= link_to post.title, category_post_path(post.category, post) %></h2>
              <%= image_tag post.image(:header), class: "post_image" %>
              <p><%= format truncate post.body, length: 100 %></p>
            </div>

        </div>
      <% end %>

        </div>
    </div>

</section>

<section class="four columns">

<%= render :partial => 'shared/categoriesmenu' %>

</section>